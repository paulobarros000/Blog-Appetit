@model BlogAppetit.Web.Models.ViewModels.AddTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Criar nova Tag</h1>
    </div>
</div>
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Nome da tag</label>
            <input class="form-control" type="text" id="name" asp-for="Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label class="form-label">Nome no display</label>
            <input class="form-control" type="text" id="displayName" asp-for="DisplayName" required />
            <small class="form-text text-muted">Isto é o que vai ser mostrado na página.</small>
            <span asp-validation-for="DisplayName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-success">Save</button>
        </div>
    </form>
</div>