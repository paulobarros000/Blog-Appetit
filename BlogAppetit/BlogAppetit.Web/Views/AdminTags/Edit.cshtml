}

@model BlogAppetit.Web.Models.ViewModels.EditTagRequest 

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null)
    {
    <form method="post">

        <div class="mb-3">
            <label for="id" class="form-label">Tag id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly />

         </div>
        <div class="mb-3">
            <label for="name" class="form-label">Nome da Tag</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label for="displayName" class="form-label">Display name da tag</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
        </div>
            <div class="mb-3">
                <div class="d-flex">
                <button type="submit" class="btn btn-primary">Atualizar</button>
                <button class="btn btn-outline-danger ms-2" type="submit" asp-area="" asp-controller="AdminTags" asp-action="Delete"> Delete</button>
                </div>
            </div>
    </form>    
    }
    else
    {
        <p>Tag não encontrada</p>
    }
</div>